<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bMiperfil.MiPerfilFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imFoto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/foto2"
        app:civ_border_color="#FF000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVert2"
        app:layout_constraintStart_toEndOf="@+id/guidelineVert1"
        app:layout_constraintTop_toBottomOf="@+id/guideline0" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/hintNombre"
        android:layout_marginBottom="2dp"
        android:inputType="textPersonName"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVert3"
        app:layout_constraintStart_toEndOf="@+id/guidelineVert0"
        app:layout_constraintTop_toBottomOf="@+id/tvCorreo" />


    <TextView
        android:id="@+id/tvLocalizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tvLocalizacion"
        android:ems="15"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/etLocalizacion"
        app:layout_constraintBottom_toTopOf="@+id/etLocalizacion"
        />
    <EditText
        android:id="@+id/etLocalizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="15"
        android:hint="@string/hintLolizacion"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etEdad"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVert3"
        app:layout_constraintStart_toEndOf="@+id/guidelineVert0"
        app:layout_constraintTop_toBottomOf="@+id/etNombre" />



    <TextView
        android:id="@+id/tvEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvEdad"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/etEdad"
        app:layout_constraintBottom_toTopOf="@+id/etEdad"
        app:layout_constraintEnd_toEndOf="@+id/etEdad"
        />

    <EditText
        android:id="@+id/etEdad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="6"
        android:hint="@string/hintEdad"
        android:inputType="number"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/etBio"
        app:layout_constraintEnd_toStartOf="@+id/etEstatura"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/tvEstatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvEstatura"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/etEstatura"
        app:layout_constraintBottom_toTopOf="@+id/etEstatura"
        app:layout_constraintEnd_toEndOf="@+id/etEstatura"
        />

    <EditText
        android:id="@+id/etEstatura"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:ems="6"
        android:hint="@string/hintEstatura"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etBio"
        app:layout_constraintEnd_toStartOf="@+id/etPeso"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etEdad" />


    <TextView
        android:id="@+id/tvPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvPeso"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/etPeso"
        app:layout_constraintBottom_toTopOf="@+id/etPeso"
        app:layout_constraintEnd_toEndOf="@+id/etPeso"
        />
    <EditText
        android:id="@+id/etPeso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:ems="6"
        android:hint="@string/hintPeso"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/etBio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/etEstatura" />
